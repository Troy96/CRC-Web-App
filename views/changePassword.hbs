
 
<div class=" block-login-form">
        <h2>Change Password</h2>

            <div class=" block-group">
                <label>Current Password:</label>
                <div class="block">
                    <i class="fa fa-user"></i>
                    <input type="text"  placeholder="Current Password" id="curr_pass" name="curr_pass" required="required" />
                </div>
            </div>
           
            <div class=" block-group">
                <label>New Password:</label>
                <div class="block">
                    <i class="fa fa-unlock"></i>
                    <input type="text"  placeholder="New Password" id="new_pass" name="new_pass" required="required" />
                </div>
            </div>
            
             <div class=" block-group">
                <label>Confirm Password:</label>
                <div class="block">
                    <i class="fa fa-user"></i>
                    <input type="password"  placeholder="Confirm Password" id="conf_pass" name="conf_pass" required="required" />
                </div>
            </div>

            {{#if error}}
            	<div class="alert alert-danger">{{ error }}</div>
            {{/if}}
            
            <button class="btn btn-success" id="changePassword">Change</button>
        
 </div>

