
 
<div class=" block-login-form">
        <h2>Change Password</h2>
        <form action="/changePassword" method="POST">

            <div class=" block-group">
                <label>Current Password:</label>
                <div class="block">
                    <i class="fa fa-user"></i>
                    <input type="password"  placeholder="Current Password" name="curr_pass" required="required" />
                </div>
            </div>
           
            <div class=" block-group">
                <label>New Password:</label>
                <div class="block">
                    <i class="fa fa-unlock"></i>
                    <input type="password"  placeholder="New Password" name="new_pass" required="required" />
                </div>
            </div>
            
             <div class=" block-group">
                <label>Confirm Password:</label>
                <div class="block">
                    <i class="fa fa-user"></i>
                    <input type="password"  placeholder="Confirm Password" name="conf_pass" required="required" />
                </div>
            </div>

            {{#if error}}
            	<div class="alert alert-danger">{{ error }}</div>
            {{/if}}
            
            <button type="submit">Change</button>
        </form>
        
 </div>

